<link href="/css/spasialisation.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <h3><%- message %></h3>
    </div>
</div>
<% if(doctors[0]){%>
<div class="row text-center">
    <% doctors.forEach(function(doctor){ %>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="/images/doctorLogo/<%- doctor.doctor_logo %>" alt="">
            <div class="caption">
                <h3><%- doctor.doctor_name %></h3>
                <h4><%- doctor.company_name %></h4>

            </div>
            <p>
                <a href="/doctor/<%- doctor.doctor_id%>" class="btn btn-default">Подробиці</a><br/><br/>
                <a href="/entry?city_id=<%- doctor.companyCity_id%>&company_id=<%-doctor.company_id%>&spacialisation_id=<%- doctor.spasialisation_id %>&doctor_id=<%- doctor.doctor_id%>" class="btn btn-primary">Запис на прийом</a>
            </p>
        </div>
    </div>

    <% }) %>

</div>
<% } %>